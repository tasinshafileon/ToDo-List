<body>

  <div class="box" id="heading">
    <h1><%= dayInfo %></h1>
  </div>

  <div class="box">
    <%for(var i=0; i<items.length;i++){%>
    <div class="item">
      <input type="checkbox">
      <p><%= items[i] %></p>
    </div>
    <%}%>

    <form class="item" action="/" method="post">
      <input type="text" name="userListItem" placeholder="Add item" autocomplete="off">
      <button type="submit" name="button">+</button>
    </form>

  </div>

